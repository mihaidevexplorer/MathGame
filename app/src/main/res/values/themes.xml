<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MathGame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Second brand color -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi= "l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Base.Theme.GamePage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Second brand color -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi= "l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Base.Theme.ResultPage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/ice_blue</item>
        <item name="colorPrimaryVariant">@color/ice_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Second brand color -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi= "l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.MathGame" parent="Base.Theme.MathGame" />
</resources>